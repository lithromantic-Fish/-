.main {
  height: 100%;
  box-sizing: border-box;
  padding-top: 90rpx;
  background-color: #f0f2f5;
}
.extract {
  width: 709rpx;
  height: 868rpx;
  background: url('https://static.hrloo.com/hrloo56/zpminiapp/img/resume_show/extract_bg.png') no-repeat center 0;
  background-size: 100% 100%;
  margin: 0 auto;
}
.share-info {
  padding: 50rpx 0 0 67rpx;
}
.sharer-info image {
  float: left;
  display: block;
  width: 52rpx;
  height: 52rpx;
  border-radius: 50%;
}
.sharer-info .sharer {
  margin-left: 72rpx;
  font-size: 26rpx;
  color: #9aa1aa;
  line-height: 1;
}
.sharer-info .sharer .sharer-date {
  margin-top: 5rpx;
}
.share-tit {
  margin-top: 50rpx;
  line-height: 1;
  font-weight: bold;
  font-size: 36rpx;
  color: #333;
}
.share-tit text {
  color: #4c89fb;
}

.passport-tip {
  display: block;
  width: 580rpx;
  line-height: 1.3;
  margin: 0 auto;
  font-size: 26rpx;
  color: rgba(255, 255, 255, .5);
  margin-top: 300rpx;
  word-wrap:break-word;
  word-break:break-all;
}
.passport-tip text {
  color: #ffffff;
}

.passport-ipt {
  width: 580rpx;
  height: 88rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
  padding: 0 30rpx;
  background-color: #ffffff;
  margin: 30rpx auto 0;
}
.passport-ipt input {
  display: block;
  height: 100%;
  color: #333;
  font-size: 30rpx;
}

.passport-submit {
  width: 580rpx;
  height: 88rpx;
  line-height: 88rpx;
  margin: 40rpx auto 0;
  border-radius: 10rpx;
  border: 1rpx solid #ffffff;
}
.passport-submit button {
  display: block;
  width: 100%;
  height: 100%;
  background-color: transparent;
  color: #ffffff;
  font-size: 34rpx;
}
.passport-submit button:active {
  background-color: #ffffff;
  color: #4c89fb;
}


/* global wxss */
.clearfix::after {
  content: " ";
  display: table;
  clear: both;
}
.clearfix::before {
  content: " ";
  display: table;
}