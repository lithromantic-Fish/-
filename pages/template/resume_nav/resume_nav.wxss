.resume_nav {
  display: flex;
  align-item:center;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #ffffff;
}
.nav-item {
  flex: 1;
  text-align: center;
  font-size: 30rpx;
  color: #666666;
  position: relative;
}
.nav-item.on {
  color: #333333;
  font-weight: bold;
}
.nav-item.on::after {
  position: absolute;
  bottom: 10rpx;
  left: 50%;
  margin-left: -34rpx;
  display: block;
  content: ' ';
  width: 68rpx;
  height: 8rpx;
  border-radius: 8px;
  background-color: #4c89fb;
}
.nav-item .nav-num {
  display: inline-block;
  color: #4c89fb;
}